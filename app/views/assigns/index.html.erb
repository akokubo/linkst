<% provide :title,  t("Listing ", model: t('activerecord.models.assign').pluralize(:locale)) %>
<h1><%= yield(:title) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.assign.user') %></th>
      <th><%= t('activerecord.attributes.assign.mission') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assigns.each do |assign| %>
      <tr>
        <td><%= assign.user.name %></td>
        <td><%= assign.mission.description %></td>
        <td><%= link_to t('Show'), assign %></td>
        <td><%= link_to t('Edit'), edit_assign_path(assign) %></td>
        <td><%= link_to t('Destroy'), assign, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New ', model: t('activerecord.models.assign')), new_assign_path %>
